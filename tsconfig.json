{
  "extends": "./tsconfig.node.json",
  "compilerOptions": {
    "jsx": "react-jsx",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "target": "ES2020",
    "strict": true,
    "noEmit": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@/components/*": ["src/components/*"],
      "@/algorithms": ["src/algorithms/index.ts"],
      "@/algorithms/*": ["src/algorithms/*"],
      "@/types/*": ["src/types/*"],
      "@/state/*": ["src/state/*"],
      "@/three/*": ["src/three/*"],
      "@/utils/*": ["src/utils/*"],
      "@/datastructures": ["src/datastructures/index.ts"],
      "@/datastructures/*": ["src/datastructures/*"]
    }
  },
  "include": ["src"]
}
